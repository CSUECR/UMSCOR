@model RefGroupVModel
@{
    ViewBag.Title = "类别组配置";
    Layout = "~/Views/Shared/_SysLayout.cshtml";
    string rs = ViewBag.RS;
    var backurl = ViewBag.BackUrl ?? "Index";    
}
@Styles.Render("~/Content/themes/base/css")
@Scripts.Render("~/bundles/jqueryui")
<section class="featuredwhite">
    <div class="content-wrapper clear-fix">
        @if (Model.FlagTrashed == "0")
{
            if (rs.HP(操作.添加))
            {
                <button class="btn green" type="button" onclick="jumptourl('Add?returnUrl=/RefGroup/Index')">@("添加".GX())</button>
            }
                <button class="btn purple" type="button" onclick="morsunEC('#MoreSunTreeTable', 'expandAll')">@("展开".GX())</button>
                <button class="btn purple" type="button" onclick="morsunEC('#MoreSunTreeTable', 'collapseAll')">@("收起".GX())</button>
            if (rs.HP(操作.修改))
            {
                <button class="btn black" type="button" onclick="jumptourl('/RefGroup/Move')">@("移动".GX())</button>
            }
            if (rs.HP(操作.回收站))
            {
                <button class="btn" type="button" onclick="jumptourl('Index?FlagTrashed=1')">@("回收站".GX())</button>
            }
        }
        else if (Model.FlagTrashed == "1")
        {
            <button class="btn" type="button" onclick="jumptourl('@backurl')">@("返回".GX())</button>
        }
        @*<button class="btn blue" type="button">@("修改".GX())</button>
        <button class="btn red" type="button">@("删除".GX())</button>
        <button class="btn" type="button">@("返回".GX())</button>
        <button class="btn yellow" type="button">@("查询".GX())</button>
        <button class="btn black" type="button">@("查询".GX())</button>*@


        <div class="portlet box @("red".getBC("BootStrapCssTable"))">
            <div class="portlet-title">
                <div class="caption"><i class="icon-cogs"></i>类别组设置</div>
                @*<div class="tools">
                    <a class="collapse" href="javascript:;"></a>
                    <a class="config" data-toggle="modal" href="#portlet-config"></a>
                    <a class="reload" href="javascript:;"></a>
                    <a class="remove" href="javascript:;"></a>
                </div>*@
            </div>
            <div class="portlet-body">
                <table id="MoreSunTreeTable" class="table table-hover">
                    <thead>
                        <tr>
                            <th>类别组名</th>
                            <th>序号</th>
                            <th>操作</th>
                            @*<th class="hidden-480">Username</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @{Action<wmfRefGroup> action = (i) =>
                        {
                            Func<wmfRefGroup, HelperResult> fun = @<tr id="TR_@item.ID" data-tt-id="@item.ID" data-tt-parent-id="@item.ParentId">
                                <td style="text-align:left;">
                                    <span class="folder ui-draggable">
                                        @item.RefGroupName
                                    </span>
                                    <input id="checkedId" type="hidden" value="@item.ID" />
                                </td>
                                <td>
                                    @item.Sort
                                </td>
                                <td>
                                    @if(Model.FlagTrashed == "0")
                                    {
                                        if (rs.HP(操作.修改))
                                        {
                                            <button class="btn blue" type="button" onclick="jumptourl('Edit?id=@item.ID&returnUrl=/RefGroup/Index')">@("修改".GX())</button>
                                        }
                                        if (rs.HP(操作.修改))
                                        {
                                            <button class="btn purple" type="button" onclick="jumptourl('Sort?sIsSort=true&sParentId=@item.ParentId')">@("排序".GX())</button>
                                        }
                                        if (rs.HP(操作.删除))
                                        {
                                            <button class="btn red" type="button" onclick="ajaxHandle('TrashList', { CheckedId : '@item.ID',flag : 'true'}, null, null, null, hideElement,['#TR_@item.ID'])">@("删除".GX())</button>
                                        }
                                    }
                                    else if (Model.FlagTrashed == "1")
                                    {
                                        if (rs.HP(操作.删除))
                                        {
                                            <button class="btn green" type="button" onclick="ajaxHandle('TrashList', { CheckedId : '@item.ID',flag : 'false'}, null, null, null, hideElement,['#TR_@item.ID'])">@("还原".GX())</button>
                                        }
                                        if (rs.HP(操作.彻底删除))
                                        {
                                            <button class="btn red" type="button" onclick="ajaxHandle('BatchDelete', { CheckedId : '@item.ID'}, null, null, null, hideElement,['#TR_@item.ID'])">@("彻底删除".GX())</button>
                                        }
                                    }
                                    
                                </td>
                            </tr>;
                            Write(fun(i));
                        };
                        Model.Each(Model.Roots, action);
                        }
                        @*<tr>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>Otto</td>
                        <td class="hidden-480">makr124</td>
                            <td><span class="label label-success">Approved</span></td>
                        </tr>*@
                    </tbody>
                </table>
            </div>
        </div>
    </div>    
</section>
    @section Scripts {        
        @Scripts.Render("~/bundles/jqueryval")        
        @Scripts.Render("~/bundles/validator")
        @Styles.Render("~/Content/JQueryQtipCss")
        @Scripts.Render("~/bundles/jqueryqtip")
        @Scripts.Render("~/bundles/morsuncommon")
        @Styles.Render("~/Content/treetableCss")
        @Scripts.Render("~/bundles/treetable")  
        <script type="text/javascript">  
            morsunTreeTable('#MoreSunTreeTable', "expanded", true);
        </script>
    }
